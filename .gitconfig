[include]
	path = ~/.gitconfig-secret

[core]
	autocrlf = input
	editor = nano
	ignorecase = false
	excludesfile = ~/.gitignore-global

[color]
	status = auto
	diff = auto
	interactive = auto
	branch = auto

[fetch]
	prune = true

[alias]
	st = status
	lg = log --graph --decorate --branches --oneline --remotes --tags --all --color
	ci = commit
	co = checkout
	cdiff = diff --cached
	ff = fastforward
	yoink = cherry-pick
	paths = remote -v
	br = branch
	authors = !git log --format='%aN' | sort | uniq -c | sort -nr

[push]
	default = simple
